<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">

    <div class="col-8 offset-2">
  <h3>Edit listing here...</h3>
<form method="POST" action="/listings/<%=  ListingHotel._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
  <div class="hotel-title mb-3">
    <label for="title" class="form-label">Edit Title</label>
  <input class="form-control" name="Listing[title]" value="<%= ListingHotel.title %>" required/>
  <div class="valid-feedback">
    Looks good!
  </div>
  <div class="invalid-feedback">
    Add valid title
  </div>
  </div>
  <div class="hotel-description mb-3">
    <label for="description" class="form-label">Edit Description</label>
<textarea class="form-control" name="Listing[description]" required><%= ListingHotel.description %></textarea>
<div class="valid-feedback">
  Looks good!
</div>
<div class="invalid-feedback">
  Add valid description
</div>

  </div>
  <div class="mb-3 imgpreview">
    <img src="<%= og %>">
  
  </div>
  <div class="hotel-image mb-3">
    <label for="image" class="form-label">Upload new Image</label>
    <input class="form-control" name="Listing[image]"  type="file" required/>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Add valid Image
    </div>
  </div>
  <div class="row">
    <div class="price mb-3 col-md-4">
     <label for="price" class="form-label">Edit Price</label>
  <input class="form-control" name="Listing[price]" value="<%= ListingHotel.price %>" type="number" required/>
  <div class="valid-feedback">
    Looks good!
  </div>
  <div class="invalid-feedback">
    Add valid price
  </div>
</div>
  <div class="country mb-3 col-md-8">
    <label for="country" class="form-label">Edit Country</label>
  <input class="form-control" name="Listing[country]" value="<%= ListingHotel.country %>" required/>
  <div class="valid-feedback">
    Looks good!
  </div>
  <div class="invalid-feedback">
    Add valid country
  </div> </div></div>
  <div class="hotel-location mb-3">
    <label for="location" class="form-label">Edit Location</label>
  <input class="form-control" name="Listing[location]" value="<%= ListingHotel.location%>" required/> 
  <div class="valid-feedback">
    Looks good!
  </div>
  <div class="invalid-feedback">
    Add valid location
  </div>
 </div>
 <div class="submit mb-3">
  <button   class="btn btn-danger">Edit</button>
</div>
</form>
</div>
</div>
<br>
</body>
