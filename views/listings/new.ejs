<% layout("/layouts/boilerplate.ejs") %>
<body>
<br>

  <div class="row">

    <div class="col-8 offset-2">
      <h3>Add new listing here...</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="hotel-title mb-3">
      <label for="title" class="form-label">Enter Title</label>
      <input class="form-control" name="Listing[title]" placeholder="Title" required/>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Add valid title
      </div>
    </div>
   
  <div class="hotel-description mb-3">
    <label for="description" class="form-label">Enter Description</label>
    <textarea
      name="Listing[description]"
      placeholder="Add your description"
      class="form-control"
    required></textarea>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Add valid description
    </div>
  </div>
  
  <div class="hotel-image mb-3">
    <label for="image" class="form-label">Upload image</label>
    <input class="form-control" name="Listing[image]"  type="file"/>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
 
  <div class="row">
   <div class="price mb-3 col-md-4">
    <label for="price" class="form-label">Enter Price</label>
    <input class="form-control" name="Listing[price]" placeholder="price" type="number" required/>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Add valid price
    </div> 
  </div>

  <div class="country mb-3 col-md-8">
    <label for="country" class="form-label">Enter Country</label>
    <input class="form-control" name="Listing[country]" placeholder="enter country" required/> 
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Add valid Country
    </div>
    </div>
    
  </div>
    <div class="hotel-location mb-3">
      <label for="location" class="form-label">Enter Location</label>
    <input class="form-control"  name="Listing[location]" placeholder="enter location " required/>
    <div class="valid-feedback">
      Looks good!
    </div> 
    <div class="invalid-feedback">
      Add valid location
    </div>
  </div>
 
  <div class="submit mb-3">
    <button class="btn btn-danger">Submit</button>
  </div>
  </form>
</div>
</div>
<br>
</body>
